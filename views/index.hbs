<html>
  <head>
    <title>Doko Online Store</title>
    <link rel='stylesheet' href='/css/index.css' />
  </head>
  <body>
   {{>header}}
    <section class='products'>
      {{#each products}}
        <div class='product-card'>
          <a href="/api/product/{{id}}">
            <div class='product-image'>
              <img src='{{image}}' />
            </div>
            <div class='product-info'>
              <h5>{{title}}</h5>
              <h6>${{price}}</h6>
            </div>
          </a>
        </div>
      {{/each}}
    </section>
    {{>footer}}
  </body>
</html>